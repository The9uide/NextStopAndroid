<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="th.ac.kmitl.it.nextstop.Model.Station" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:alpha="0.38"
            android:text="@{item.name}"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black"
            android:textSize="16.0sp" />


        <TextView
            android:id="@+id/stationId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/name"
            android:alpha="0.3"
            android:text="@{item.id}"
            android:textColor="@android:color/black"
            android:textSize="16.0sp" />

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginTop="5dp"
            android:alpha="1"
            android:text="สถานีปัจจุบันของคุณ"
            android:textColor="@color/chrome_yellow" />

        <ImageView
            android:id="@+id/item_info"
            android:layout_width="15dp"
            android:layout_height="25.0dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/iconcurrentstation" />

    </RelativeLayout>

</layout>